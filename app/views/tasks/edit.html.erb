<h1> Edit Task </h1>

<%= form_with model: @task do |f| %>
  <p><strong> <%= f.label :title %></strong> <p>
  <%= f.text_field :title %>
  <p><strong> <%= f.label :details %> </strong><p>
  <%= f.text_area :details %>
  <p> <%= f.label :completed %>
  <%= f.check_box :completed, {}, 'true', 'false' %> <p>
  <%= f.submit %>
<% end %>
