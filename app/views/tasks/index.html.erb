<h1> My Tasks </h1>


<% @tasks.each do |task| %>
  <p><%= check_box_tag :completed, true, task.completed%> <%= link_to task.title , task_path(task) %> <%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, task_path(task), data: {turbo_method: :delete, turbo_confirm: "Delete Task?" } %></p>
<% end %>

<%= link_to "Add a new task", new_task_path %>
